
@using MovieShop.Core.ServiceInterfaces
@model MovieShop.Core.Models.Response.MovieDetailsResponseModel
@inject MovieShop.Core.ServiceInterfaces.ICurrentLogedInUser CurrentLogedInUser

<form method="post" asp-controller="User" asp-action="BuyMovie">
    <div class="card mb-3 container shadow ">
        <div class="row justify-content-md-center">
            <div class="col-md-4">
                <img src="@Model.PosterUrl" alt="@Model.Title" class="card-img-top">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5>Order Summary</h5>
                    <hr />
                    <div class="row">
                        <div class="col-md-6 h5">
                            @Model.Title
                            <input type="hidden" value="@Model.Id" name="MovieId"/>
                            <input type="hidden" value="@CurrentLogedInUser.UserId" name="UserId"/>
                        </div>
                        <div class="col-md-6 h5">
                            $@Model.Price
                        </div>
                        <div class="col-12">
                            <input type="submit" value="Confirm Purchase" class="btn btn-primary btn-lg btn-block" />
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</form>